        <Label x:Name="parcelLabel" Content="              Parcels" HorizontalAlignment="Left" Margin="337,228,0,0" VerticalAlignment="Top" Width="269" FontSize="25" Foreground="#FF39BD74"/>
        <Label x:Name="customerLabel" Content="   Customers" HorizontalAlignment="Left" Margin="224,368,0,0" VerticalAlignment="Top" Width="196" FontSize="25" Foreground="#FF39BD74"/>
        <Label Content="Base-Stations" HorizontalAlignment="Left" Margin="529,366,0,0" VerticalAlignment="Top" Width="169" FontSize="25" Foreground="#FF39BD74"/>
        <Label x:Name="welcomeLabel" Content="Welcome Dear Manager" HorizontalAlignment="Left" Margin="194,20,0,0" VerticalAlignment="Top" Height="66" Width="384" FontSize="30" Foreground="#FF669AC3" RenderTransformOrigin="-0.961,0.198" FontFamily="Segoe Print" Background="Transparent"/>
