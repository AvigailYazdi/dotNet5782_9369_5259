             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="userOptionsGrid" Style="{StaticResource gridStyle}">
        <Image HorizontalAlignment="Left" Height="171" Margin="89,91,0,0" VerticalAlignment="Top" Width="169" Source="images/drone.jpg"/>
        <Image HorizontalAlignment="Left" Height="109" Margin="421,126,0,0" VerticalAlignment="Top" Width="112" Source="images/parcel.png"/>
        <Image HorizontalAlignment="Left" Height="150" Margin="548,245,0,0" VerticalAlignment="Top" Width="135" Source="images/station.png"/>
