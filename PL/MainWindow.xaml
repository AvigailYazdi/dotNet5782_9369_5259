<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" FlowDirection="LeftToRight" WindowStyle="SingleBorderWindow" WindowState="Maximized" Height="450" Width="800" >
    <Grid x:Name="mainGrid" Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="/DeliveryDrones.jpg"/>
        </Grid.Background>
        <Grid x:Name="wingsGrid">
        <Button x:Name="ShowDronesButton" Content="Drones List" HorizontalAlignment="Center" Margin="0,332,0,54" Height="54" Width="194" Click="showDronesButton_Click" Background="{x:Null}" BorderBrush="{x:Null}" FontWeight="Bold" FontSize="34" />
        <Label Name="WingsTitleLabel" Content="WINGS" HorizontalAlignment="Center" VerticalAlignment="Center" Height="74" Width="194" FontFamily="Segoe Script" FontWeight="Bold" FontSize="48"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="129,236,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
